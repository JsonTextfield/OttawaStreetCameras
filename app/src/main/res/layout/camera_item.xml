<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:minHeight="50dp"
        android:id="@+id/could_not_load_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"
        android:text="@string/could_not_load_long"/>

    <ImageView
        android:id="@+id/source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/source"
        android:layout_centerHorizontal="true"
        android:background="#85000000"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

    <View
        android:id="@+id/overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/source"
        android:layout_alignTop="@+id/source"
        android:layout_alignEnd="@+id/source"
        android:layout_alignBottom="@+id/source"
        android:background="#4F00BCD4"
        android:visibility="invisible" />
</RelativeLayout>